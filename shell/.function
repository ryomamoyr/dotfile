# ec2_ssmのホスト名を変更する
chost() {
  # Host ec2 ブロック内で HostName の行を、スペースを付けて正しく置換します
  sed -i '' "/^Host ec2$/,/^Host /s/^\s*HostName.*/HostName $1/" ~/.ssh/config
  echo "✅ HostName を $1 に変更しました。"
}

# Jupyter カーネル登録（uv プロジェクト用）
# 使い方: jk [カーネル名]  ※省略時はディレクトリ名を使用
jk() {
  local name="${1:-$(basename $(pwd))}"
  uv add --quiet ipykernel 2>/dev/null
  uv run python -m ipykernel install --user --name "$name"
  echo "カーネル '$name' を登録しました。Neovimで :MoltenInit → $name を選択"
}

# tmux作業ウィンドウ作成（新規ウィンドウ → リネーム → 左右分割）
# 使い方: pj [名前]  ※省略時はディレクトリ名を使用
pj() {
  local name="${1:-$(basename $(pwd))}"
  tmux new-window -n "$name"
  tmux split-window -h -c '#{pane_current_path}'
  tmux select-pane -L
}
