# obsidian用のpull, push
opull() {
  gh auth switch --user ryomac1
  git fetch origin
  git reset --hard origin/main
  gh auth switch --user ryomamoyr
}


opush() {
  gh auth switch --user ryomac1
  git add .
  git commit -m "$(date '+%Y-%m-%d %H:%M:%S') commit"
  git push -u origin main
  gh auth switch --user ryomamoyr
}

